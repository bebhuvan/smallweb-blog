---
import Base from '../layouts/Base.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
---

<Base title="Install App — The Small Web" description="Add The Small Web to your home screen as a lightweight app.">
  <ThemeToggle />

  <div class="page">
    <Header currentPath="/install" />

    <main class="install-main">
      <div class="editorial-header">
        <h1 class="editorial-title">Install App</h1>
        <p class="editorial-sub">A lightweight, offline-friendly shortcut to The Small Web</p>
        <hr class="editorial-rule">
      </div>

      <div class="content">
        <h2>iPhone / iPad (Safari)</h2>
        <ol>
          <li>Open <strong>smallweb.blog</strong> in Safari.</li>
          <li>Tap the <strong>Share</strong> button.</li>
          <li>Choose <strong>Add to Home Screen</strong>.</li>
          <li>Name it and tap <strong>Add</strong>.</li>
        </ol>

        <h2>Android (Chrome)</h2>
        <ol>
          <li>Open <strong>smallweb.blog</strong> in Chrome.</li>
          <li>Tap the <strong>menu</strong> (three dots).</li>
          <li>Select <strong>Install app</strong> or <strong>Add to Home screen</strong>.</li>
        </ol>

        <h2>Desktop (Chrome / Edge)</h2>
        <ol>
          <li>Open <strong>smallweb.blog</strong>.</li>
          <li>Click the <strong>Install</strong> icon in the address bar (or in the menu).</li>
          <li>Confirm the install.</li>
        </ol>

        <div class="pasted-quote" style="cursor: default;">
          <div class="pasted-quote-inner">
            <div class="pasted-quote-label">Tip</div>
            <p class="pasted-quote-text">The app works best after your first visit — it caches key pages and loads faster next time.</p>
          </div>
        </div>
      </div>
    </main>

    <Footer />
  </div>
</Base>

<style>
  .install-main {
    max-width: 700px;
    margin: 0 auto;
    padding: 0 0 2rem;
  }

  .install-main ol {
    margin: 0.6rem 0 1.6rem 1.25rem;
    color: var(--ink-muted);
    line-height: 1.7;
  }

  .install-main li {
    margin: 0.35rem 0;
  }
</style>
